																									To="200"
																									EasingFunction="{Ease In, Quad}"/>

								<DoubleAnimation Storyboard.TargetProperty="Opacity"
																									To="0" 
																									EasingFunction="{Ease In, Quad}"/>

								<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="IsHitTestVisible"
																																						Duration="0:0:0">
									<DiscreteObjectKeyFrame KeyTime="0:0:0">
										<DiscreteObjectKeyFrame.Value>
											<system:Boolean>False</system:Boolean>
										</DiscreteObjectKeyFrame.Value>
									</DiscreteObjectKeyFrame>
								</ObjectAnimationUsingKeyFrames>

							</ScopedStoryboard>
						</Storyboard>

						<Storyboard	BeginTime="0:0:0.2">
							<ScopedStoryboard Storyboard.TargetName="LoginView"
																									Duration="0:0:0.25">
								<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
																									To="0.5" 
																									EasingFunction="{Ease In, Cubic}"/>

								<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
																									To="0.5" 
																									EasingFunction="{Ease In, Cubic}"/>

								<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.Y)"
																									To="200"
																									EasingFunction="{Ease In, Quad}"/>

								<DoubleAnimation Storyboard.TargetProperty="Opacity"
																									To="0" 
																									EasingFunction="{Ease In, Quad}"/>

								<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="IsHitTestVisible"
																																						Duration="0:0:0">
									<DiscreteObjectKeyFrame KeyTime="0:0:0">
										<DiscreteObjectKeyFrame.Value>
											<system:Boolean>False</system:Boolean>
										</DiscreteObjectKeyFrame.Value>
									</DiscreteObjectKeyFrame>
								</ObjectAnimationUsingKeyFrames>

							</ScopedStoryboard>
						</Storyboard>

						<ScopedStoryboard Storyboard.TargetName="LoginView"
																								BeginTime="0:0:0.7"
																								Duration="0:0:0.3">
							<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
																								From=".5"	
																								To="1" 
																								EasingFunction="{Ease Out, Cubic}"/>

							<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
																								From=".5"	
																								To="1"
																								EasingFunction="{Ease Out, Cubic}"/>

							<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.Y)"
																								From="-140"
																								To="0"
																								EasingFunction="{Ease Out, Quart}"/>

							<DoubleAnimation Storyboard.TargetProperty="Opacity"
																								To="1" 
																								EasingFunction="{Ease In, Quad}"/>


							<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="IsHitTestVisible"
																																						Duration="0:0:0">
								<DiscreteObjectKeyFrame KeyTime="0:0:0">
									<DiscreteObjectKeyFrame.Value>
										<system:Boolean>True</system:Boolean>
									</DiscreteObjectKeyFrame.Value>
								</DiscreteObjectKeyFrame>
							</ObjectAnimationUsingKeyFrames>
						</ScopedStoryboard>
					</Storyboard>
				</VisualState>

				<VisualState Name="MainViewPage">
					<Storyboard>
						<Storyboard	BeginTime="0:0:0.2">
							<ScopedStoryboard Storyboard.TargetName="LoginView"
																									Duration="0:0:0.25">
								<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
																									To="0.5" 
																									EasingFunction="{Ease In, Cubic}"/>

								<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
																									To="0.5" 
																									EasingFunction="{Ease In, Cubic}"/>

								<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.Y)"
																									To="200"
																									EasingFunction="{Ease In, Quad}"/>

								<DoubleAnimation Storyboard.TargetProperty="Opacity"
																									To="0" 
																									EasingFunction="{Ease In, Quad}"/>

								<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="IsHitTestVisible"
																																						Duration="0:0:0">
									<DiscreteObjectKeyFrame KeyTime="0:0:0">
										<DiscreteObjectKeyFrame.Value>
											<system:Boolean>False</system:Boolean>
										</DiscreteObjectKeyFrame.Value>
									</DiscreteObjectKeyFrame>
								</ObjectAnimationUsingKeyFrames>

							</ScopedStoryboard>
						</Storyboard>

						<ScopedStoryboard Storyboard.TargetName="MainView"
																								BeginTime="0:0:0.7"
																								Duration="0:0:0.3">
							<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
																								From=".5"	
																								To="1" 
																								EasingFunction="{Ease Out, Cubic}"/>

							<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
																								From=".5"	
																								To="1"
																								EasingFunction="{Ease Out, Cubic}"/>

							<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.Y)"
																								From="-140"
																								To="0"
																								EasingFunction="{Ease Out, Quart}"/>

							<DoubleAnimation Storyboard.TargetProperty="Opacity"
																								To="1" 
																								EasingFunction="{Ease In, Quad}"/>


							<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="IsHitTestVisible"
																																						Duration="0:0:0">
								<DiscreteObjectKeyFrame KeyTime="0:0:0">
									<DiscreteObjectKeyFrame.Value>
